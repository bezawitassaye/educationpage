<div class="parent-container1">
    <div class="shooping1">
        <div>
            Title
        </div>
        <div>
            Price
        </div>
        <div>
            Quantity
        </div>
        <div>
            action
        </div>
    </div>
</div>

<% if (products && products.length > 0) { %>
    <% products.forEach(function(product) { %>
        <div class="parent-container1">
            <div class="shooping1">
                <div>
                    <%= product.item.name %>
                </div>
                <div>
                    <%= product.price %>
                </div>
                <div>
                    <%= product.qty %>
                </div>
                <div>
                    action
                </div>
            </div>
        </div>
    <% }); %>
    <div>
        <p>Total Price</p>
        <%= totalPrice %>
    </div>
<% } else { %>
    <p>No items in the cart</p>
<% } %>

<div class="button-shop">
   <a href="/checkout"> <button>Check Out</button></a>
</div>